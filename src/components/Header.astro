---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import { Icon } from "astro-icon/components";
---

<header>
  <nav>
    <h2 class="brand">
      <a href="/" aria-label="Home">
        <img src="/favicon.svg" alt="" class="logo" />
      </a>
    </h2>
    <div class="internal-links">
      <HeaderLink href="/">
        <Icon name="lucide:home" class="icon" />
        <span class="link-text">Home</span>
      </HeaderLink>
      <HeaderLink href="/blog">
        <Icon name="lucide:book-open" class="icon" />
        <span class="link-text">Blog</span>
      </HeaderLink>
      <HeaderLink href="/about">
        <Icon name="lucide:user" class="icon" />
        <span class="link-text">About</span>
      </HeaderLink>
    </div>
    <div class="social-links">
      <button
        id="open-playground"
        class="playground-btn"
        aria-label="Apri Playground"
      >
        <Icon name="lucide:terminal" width={24} height={24} />
      </button>
    </div>
  </nav>
</header>

<script>
  import { openPlayground } from "./Playground/store";

  const btn = document.getElementById("open-playground");
  if (btn) {
    btn.addEventListener("click", () => {
      openPlayground();
    });
  }
</script>

<style>
  header {
    margin: 1rem auto;
    padding: 0 1rem;
    width: calc(100% - 2rem);
    max-width: 960px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16px;
    position: sticky;
    top: 1rem;
    z-index: 999;
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
    white-space: nowrap;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: var(--black);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .logo {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: block;
    object-fit: contain;
  }

  nav {
    display: grid;
    /* Adattiamo le colonne per far spazio al bottone */
    grid-template-columns: 80px 1fr auto;
    align-items: center;
    height: 64px;
    gap: 0.5rem;
  }

  .playground-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.4rem;
    background: transparent;
    color: var(--black);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .playground-btn:hover {
    background: rgba(var(--accent), 0.05);
    color: var(--accent);
  }

  .playground-btn:active {
    transform: scale(0.95);
  }

  .internal-links {
    display: flex;
    justify-content: center;
    gap: 0.25rem;
  }
  .social-links {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
    align-items: center;
  }
  .icon {
    display: none;
    width: 20px;
    height: 20px;
    vertical-align: middle;
  }
  nav a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    padding: 0.5em 0.8em;
    color: var(--black);
    text-decoration: none;
    font-weight: 500;
    line-height: 1;
    border-radius: 8px;
    transition: all 0.2s;
  }
  nav a:hover {
    background: rgba(var(--accent), 0.05);
    color: var(--accent);
  }
  nav a.active {
    background: rgba(var(--accent), 0.1);
    color: var(--accent);
  }
  .social-links a {
    display: flex;
    padding: 0.4em;
    border-radius: 8px;
    transition: background 0.2s;
  }
  .social-links a:hover {
    background: rgba(var(--accent), 0.05);
    color: var(--accent);
  }

  @media (max-width: 720px) {
    h2 {
      font-size: 1em;
    }
    nav {
      /* Manteniamo le stesse proporzioni per la centratura su mobile */
      grid-template-columns: 60px 1fr 60px;
      gap: 0.25rem;
    }
    .internal-links {
      justify-content: center;
    }
    .link-text {
      display: none;
    }
    .icon {
      display: block;
    }
    nav a {
      padding: 0.6em;
    }
    .social-links {
      gap: 0.2rem;
    }
  }

  @media (max-width: 400px) {
    header {
      margin: 0.5rem auto;
      width: calc(100% - 1rem);
      padding: 0 0.25rem;
    }
    nav {
      grid-template-columns: 50px 1fr 50px;
      gap: 0.25rem;
    }
    .internal-links {
      gap: 0.1rem;
    }
    nav a {
      padding: 0.5em 0.6em;
    }
  }
</style>
