---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filtriamo solo h2 e h3 per non affollare troppo la TOC
const filteredHeadings = headings.filter((h) => h.depth > 1 && h.depth < 4);
---

<aside class="toc">
  <h4>In questo articolo</h4>
  <ul class="toc-list">
    {
      filteredHeadings.map((heading) => (
        <li class={`depth-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</aside>

<style>
  .toc {
    position: fixed;
    top: 170px;
    right: calc(50% - 660px);
    width: 250px;
    display: none;
    max-height: calc(100vh - 200px); /* Evita overflow dal basso */
    overflow-y: auto; /* Permette lo scroll se il menu è lungo */
    padding-right: 10px;
  }

  /* Personalizzazione scrollbar per renderla discreta */
  .toc::-webkit-scrollbar {
    width: 4px;
  }
  .toc::-webkit-scrollbar-thumb {
    background: rgba(var(--gray-light), 1);
    border-radius: 10px;
  }

  .toc h4 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(var(--gray));
    margin-bottom: 1rem;
  }

  /* Funzionalità CSS moderna: scroll-target-group */
  .toc-list {
    list-style: none;
    padding: 0;
    scroll-target-group: auto; /* Attiva il tracciamento automatico */
  }

  .toc-list li {
    margin-bottom: 0.25rem;
  }

  .toc-list li.depth-3 {
    padding-left: 1rem;
  }

  .toc-list a {
    display: block;
    padding: 0.3rem 0.75rem;
    color: rgb(var(--gray-dark));
    text-decoration: none;
    font-size: 0.9rem;
    border-left: 2px solid transparent;
    transition: all 0.2s;
  }

  .toc-list a:hover {
    color: var(--accent);
    border-left-color: rgb(var(--gray-light));
  }

  /* Pseudo-classe moderna: si attiva sull'ancora visibile a video */
  .toc-list a:target-current {
    color: var(--accent);
    font-weight: 600;
    border-left-color: var(--accent);
    background: rgba(var(--accent), 0.05);
  }

  @media (min-width: 1350px) {
    .toc {
      display: block;
    }
  }
</style>
